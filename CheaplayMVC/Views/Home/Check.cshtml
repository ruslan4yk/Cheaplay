@using CheaplayMVC.Models
@model Subscription

@{
    ViewData["Title"] = "Check subscription";
}

<form>
    <div class="">
        <h1 class="display-4 text-center">Subscription info</h1>
        @{
                <div style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif; font-size:large">
                    <div class="row">
                        <div class="col-3">
                            <a>Title: @Model.Game.Title</a>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-3">
                            <a>Price: @Model.Game.Price$</a>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-3">
                            <a>Discount: @Model.Game.Discount%</a>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-3">
                            <a>
                                Discount price: @Math.Round((Decimal.ToDouble(Model.Game.Price) *
                                (100 - Model.Game.Discount) / 100), 2).ToString()$
                            </a>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-3">
                            <a>Total number of subscribers: @Model.Game.NumberSubscribes</a>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-3">
                            <a>Time of creating: @Model.Created</a>
                        </div>
                    </div>
                </div>
        }

        <button name="buttonAdd" class="align-self-end btn btn-lg btn-primary"
                value=@Model.ToString() asp-controller="Subscription" asp-action="Add">
            Add subscription
        </button>

        <button name="button" class="align-self-end btn btn-lg btn-danger"
                value="cancel" asp-controller="Home" asp-action="Index">
            Cancel
        </button>

    </div>
</form>